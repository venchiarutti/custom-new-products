<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="venchiarutti" showInDefault="1" showInStore="1" showInWebsite="1">
            <label>Venchiarutti</label>
            <tab>general</tab>
            <resource>Magento_Cms::config_cms</resource>
            <group id="custom_new_products" showInDefault="1" showInStore="1" showInWebsite="1">
                <label>Custom New Products</label>
                <field id="enabled" showInDefault="1" showInStore="1" showInWebsite="1" type="select">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="max_products_qty" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Max quantity of products to be displayed in frontend</label>
                    <validate>required-entry</validate>
                </field>
            </group>
        </section>
    </system>
</config>
